<%= content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>



<div class="col-sm-9">
  <div class="row jumbotron">
    <center>
    <h1>Average Song Attribute Values</h1>
    </center>
   <%= column_chart({"Danceability" => @danceability_user*100, "Popularity" => @popularity_user, "Acousticness" => @acousticness_user*100, "Instrumentalness"=>@instrumentalness_user*100,"Energy" =>@energy_user*100,"Liveness"=>@liveness_user*100,"Loudness"=>(@loudness_user+60)/60*100,"Tempo"=>@tempo_user},
                      height:"400px", 
                      width: "100%") %>
  
  </div>

  <div class="row">
   <center>
  <h1>Most Similar Users Based On:</h1>
  </center>
  <div class="col-sm-4">
      <h3>Saved Songs</h3>
      <ul>
        <% @top_n_users.each do |user| %>
          <li><%=user['name']%></li>
        <% end %>
      </ul>
    </div>

    <div class="col-sm-4">
      <h3>Playlists You Follow</h3>
      <ul>
        <% @top_n_users_1.each do |user| %>
  <p><%=user['name']%></p>
<% end %>
      </ul>
    </div>

    <div class="col-sm-4">
      <h3>Playlists You Created</h3>
      <ul>
        <% @top_n_users_2.each do |user| %>
  <p><%=user['name']%></p>
<% end %>
      </ul>
    </div>
    </div>
<div class="row">
    <h2>Other Data:</h2>

    <div class="col-sm-4">
      <h3>Top Albums</h3>
      <ul>
        <% @top_n_albums.each do |album| %>
          <p><%=album['album_name']%></p>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-4">
      <h3>Top Artists</h3>
      <ul>
        <% @top_n_artists.each do |artist| %>
          <p><%=artist['name']%></p>
        <% end %>
      </ul>
    </div>

    

    
  </div>

  <div class = "row">

   <h2>Song Recommendations Based on <%=$rec%>:</h2>

  <div class="col-sm-4">
      <h3>Top Songs</h3>
      <% @top_n_songs_recs.each do |song| %>
        <p>&ldquo;<%=song['song_name']%>&rdquo; by <%=song['name']%></p>
      <% end %>
    </div>

  </div>
</div>


