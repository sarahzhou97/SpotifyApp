<%= content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>

<div class="col-sm-9">
  <div class="row jumbotron">
    <h1>Hello, <%=$spotify_user.name%> </h1>
    <p>Here's what we know about you so far:</p>
    <div class="col-sm-4">
      <%= pie_chart({"R&B" => 10, "Pop" => 5},
                    height:"200px", 
                    width: "100%", 
                    donut: "true") %>
    </div>
    <div class="col-sm-4">
      <%= line_chart({"Jan" => 10, "March" => 23, "July" => 123, "August" => 215, "October" => 34},
                    height:"200px", 
                    width: "100%") %>
    </div>
    <div class="col-sm-4">
      <%= column_chart({"Jan" => 10, "March" => 23, "July" => 123, "August" => 215, "October" => 34},
                      height:"200px", 
                      width: "100%") %>
    </div>
  </div>
  <div class="row">
  <h2>Most Similar Users Based On:</h2>

  <div class="col-sm-4">
      <h3>Saved Songs</h3>
      <ul>
        <% @top_n_users.each do |user| %>
          <li><%=user%></li>
        <% end %>
      </ul>
    </div>

    <div class="col-sm-4">
      <h3>Playlists You Follow</h3>
      <ul>
        <% @top_n_users_1.each do |user| %>
  <p><%=user%></p>
<% end %>
      </ul>
    </div>

    <div class="col-sm-4">
      <h3>Playlists You Created</h3>
      <ul>
        <% @top_n_users_2.each do |user| %>
  <p><%=user%></p>
<% end %>
      </ul>
    </div>
    </div>
<div class="row">
    <h2>Other Data:</h2>

    <div class="col-sm-4">
      <h3>Top Albums</h3>
      <ul>
        <% @top_n_albums.each do |album| %>
          <p><%=album['album_name']%></p>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-4">
      <h3>Top Artists</h3>
      <ul>
        <% @top_n_artists.each do |artist| %>
          <p><%=artist['name']%></p>
        <% end %>
      </ul>
    </div>

    

    
  </div>

  <div class = "row">

   <h2>Song Recommendations Based on <%=$rec%>:</h2>

  <div class="col-sm-4">
      <h3>Top Songs</h3>
      <% @top_n_songs_recs.each do |song| %>
        <p><%=song['track_name']%> - <%=$rec%>: <%=song[$rec]%></p>
      <% end %>
    </div>

  </div>
</div>

<h1>Checking Repeats in Tracks</h1>

<% @check_repeats.each do |repeats| %>
  <p><%=repeats%></p>
<% end %>

<h1>Checking Repeats in Users</h1>

<% @check_repeats_users.each do |repeats| %>
  <p><%=repeats%></p>
<% end %>

